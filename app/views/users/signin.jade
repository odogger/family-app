extends ../layouts/default
block content
 .row
  .col-md-6.col-md-offset-3
   form.signin(action="/users/session", method="post")
    p.error= message
    .form-group
     label.control-label(for='email') Email
     input#email.form-control.block-level(type='email', name="email", placeholder='Email')

    .form-group
     label.control-label(for='password') Password
     input#password.form-control.block-level(type='password', name="password", placeholder='Password')

     .form-group
      br
      button.btn.btn-primary(type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.btn.btn-default(href="/signup") Sign up
